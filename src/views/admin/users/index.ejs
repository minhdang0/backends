<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users | Admin Dashboard</title>
    <%- include("../partials/head") %>
    <style>
      .users-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      .users-table th,
      .users-table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      .users-table th {
        background-color: #f2f2f2;
        font-weight: bold;
      }
      .users-table tr:hover {
        background-color: #f5f5f5;
      }
      .user-link {
        color: #0066cc;
        text-decoration: none;
      }
      .user-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>Users</h1>

      <table class="users-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Status</th>
            <th>Created At</th>
          </tr>
        </thead>
        <tbody>
          <% for (let user of users) { %>
          <tr>
            <td>
              <a href="/admin/users/<%= user.id %>" class="user-link"
                ><%= user.id %></a
              >
            </td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.gender %></td>
            <td><%= user.is_active ? 'Active' : 'Inactive' %></td>
            <td><%= new Date(user.created_at).toLocaleDateString() %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </main>
  </body>
</html>
